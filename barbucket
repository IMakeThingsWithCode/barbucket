#!/usr/bin/bash

if [ ! -d "$HOME/.barbucket/" ]; then
    mkdir ~/.barbucket/
fi
cd ~/.barbucket/ || exit 2
touch ~/.barbucket/main.txt || exit 2

check_if_cancelled () {
    if [[ "$?" != "0" ]]; then
        exit 2
    fi
}

out=$(
    zenity \
    --width 500 --height 100 --title "barbucket ðŸ—³ï¸" \
    --entry --text "What's on your mind?" \
    --ok-label "submit âœï¸ðŸ”¥" --cancel-label "trash ðŸ—‘ï¸" 2> /dev/null 
)

check_if_cancelled;
location=$(
    zenity \
    --title "where to save? ðŸ—ƒï¸" --width 150 --height 500 \
    --file-selection --save --filename "$(cd ~/.barbucket/ || exit 2; pwd)""/main.txt" 2> /dev/null
)

check_if_cancelled;
echo "$out" >> "$location"